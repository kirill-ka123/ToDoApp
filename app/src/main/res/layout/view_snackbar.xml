<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/animatedProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/anim_progressbar"
        android:src="@drawable/avd_anim_numbers" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/case_was_deleted"
        android:textAppearance="@style/TextAppearance.Body"
        android:textColor="?android:attr/textColorSecondary" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textAppearance="@style/TextAppearance.Button"
        android:textColor="?attr/colorSecondary" />

</LinearLayout>